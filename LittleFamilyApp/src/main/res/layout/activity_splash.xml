<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.yellowforktech.littlefamilytree.activities.SplashActivity"
    android:columnCount="1"
    android:rowCount="2"
    android:background="#ffffffff">


    <view
        android:layout_width="150dp"
        android:layout_height="150dp"
        class="com.yellowforktech.littlefamilytree.views.SpritedSurfaceView"
        android:id="@+id/plantView"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="center" />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/splash_logo"
            android:src="@drawable/little_family_logo"
            android:layout_gravity="top|center_horizontal"
            android:layout_rowWeight="2"
        android:layout_row="1"
        android:layout_column="0" />



</GridLayout>
