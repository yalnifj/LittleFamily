<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="0dp"
    tools:context="com.yellowforktech.littlefamilytree.activities.MyTreeActivity"
    android:background="@drawable/tree_background">

    <FrameLayout
        tools:layout="@layout/fragment_top_bar"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/topBarFragment"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <view
        class="com.yellowforktech.littlefamilytree.views.TreeSpriteSurfaceView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/treeView"
        android:layout_below="@+id/topBarFragment"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
