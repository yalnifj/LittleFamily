<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.finlayfamily.littlefamily.activities.ColoringGameActivity"
    android:background="@drawable/scratch_background"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/topBarFragment"
        tools:layout="@layout/fragment_top_bar" />

    <org.finlayfamily.littlefamily.views.ColoringView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layeredImage"
        android:layout_below="@+id/topBarFragment"
        android:layout_weight="1"
         />

    <view
        android:layout_width="match_parent"
        android:layout_height="120dp"
        class="org.finlayfamily.littlefamily.views.WaterColorImageView"
        android:id="@+id/colorPicker" />

</LinearLayout>
