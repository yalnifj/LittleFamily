<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context="com.yellowforktech.littlefamilytree.activities.FlyingActivity"
    android:background="@drawable/tree_background"
    android:keepScreenOn="true">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/topbar_height"
        android:id="@+id/topBarFragment"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        tools:layout="@layout/fragment_top_bar" />

    <com.yellowforktech.littlefamilytree.views.FlyingSurfaceView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/flyingView"
        android:layout_below="@+id/topBarFragment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"  />

</RelativeLayout>
