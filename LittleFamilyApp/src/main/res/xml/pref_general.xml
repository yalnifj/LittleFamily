<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:key="service_type"
        android:title="@string/pref_title_remote_service_type"
        android:defaultValue="FamilySearchService"
        android:entries="@array/pref_remote_service_titles"
        android:entryValues="@array/pref_remote_service_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <Preference android:title="@string/pref_title_manage_creds">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="org.finlayfamily.littlefamily"
            android:targetClass="org.finlayfamily.littlefamily.activities.FSLoginActivity" />
    </Preference>

    <CheckBoxPreference android:title="@string/pref_title_sync_data_background" android:key="sync_background" android:defaultValue="true" />
    <CheckBoxPreference android:title="@string/pref_title_sync_data_cellular" android:key="sync_cellular" android:defaultValue="false" />
    <ListPreference
        android:key="sync_delay"
        android:title="@string/pref_title_sync_delay"
        android:defaultValue="1"
        android:entries="@array/pref_sync_frequency_titles"
        android:entryValues="@array/pref_sync_frequency_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <Preference android:title="@string/pref_title_manage_people">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="org.finlayfamily.littlefamily"
            android:targetClass="org.finlayfamily.littlefamily.activities.PersonSearchActivity" />
    </Preference>
</PreferenceScreen>
