<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.yellowforktech.littlefamilytree.activities.SplashActivity"
    android:orientation="vertical"
    android:background="#ffffffff">


    <view
        android:layout_width="150dp"
        android:layout_height="150dp"
        class="com.yellowforktech.littlefamilytree.views.SpritedSurfaceView"
        android:id="@+id/plantView"
        android:layout_gravity="center" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/quietMode"
        android:src="@drawable/quiet_mode_off"
        android:onClick="toggleQuietMode"
        android:contentDescription="Toggle Quiet Mode"
        android:layout_gravity="bottom"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/splash_logo"
            android:src="@drawable/little_family_logo"
            android:layout_gravity="center_horizontal"
        />

    <ImageView
        android:layout_width="105dp"
        android:layout_height="70dp"
        android:id="@+id/yftLogo"
        android:src="@drawable/yft_logo"
        android:layout_gravity="bottom"/>

    </LinearLayout>
</LinearLayout>
